@model KafeQRMenu.UI.Areas.SuperAdmin.Models.AdminViewModels.SAAdminVM
@{
    ViewData["Title"] = "Admin Detayı";
}

<div class="page-header">
    <h1>
        <i class="bi bi-person-circle"></i>
        Admin Detayı
    </h1>
    <div class="header-actions">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i>
            Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i>
            Geri Dön
        </a>
    </div>
</div>

<div class="details-container">
    <!-- Profile Card -->
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-avatar">
                @Model.FirstName?.Substring(0, 1)@Model.LastName?.Substring(0, 1)
            </div>
            <div class="profile-info">
                <h2>@Model.FirstName @Model.LastName</h2>
                <p class="profile-role">
                    <i class="bi bi-shield-check"></i>
                    Admin
                </p>
            </div>
        </div>
    </div>

    <!-- Details Grid -->
    <div class="details-grid">
        <!-- Contact Information -->
        <div class="detail-card">
            <div class="card-header">
                <i class="bi bi-person-badge"></i>
                İletişim Bilgileri
            </div>
            <div class="card-body">
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="bi bi-envelope"></i>
                        Email
                    </span>
                    <span class="detail-value">@Model.Email</span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">
                        <i class="bi bi-telephone"></i>
                        Telefon
                    </span>
                </div>
            </div>
        </div>

        <!-- Cafe Information -->
        <div class="detail-card">
            <div class="card-header">
                <i class="bi bi-shop"></i>
                Cafe Bilgisi
            </div>
            <div class="card-body">
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="bi bi-building"></i>
                        Atanmış Cafe
                    </span>
                    <span class="detail-value">
                        @if (!string.IsNullOrEmpty(Model.CafeName))
                        {
                            <span class="cafe-badge">@Model.CafeName</span>
                        }
                        else
                        {
                            <span class="text-muted">Cafe ataması yapılmamış</span>
                        }
                    </span>
                </div>
            </div>
        </div>

        <!-- System Information -->
        <div class="detail-card">
            <div class="card-header">
                <i class="bi bi-info-circle"></i>
                Sistem Bilgileri
            </div>
             <div class="card-body">
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="bi bi-key"></i>
                        Admin Soyad
                    </span>
                    <span class="detail-value">
                        <code>@Model.LastName</code>
                    </span>
                </div>
            </div> <div class="card-body">
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="bi bi-key"></i>
                        Admin Ad
                    </span>
                    <span class="detail-value">
                        <code>@Model.FirstName</code>
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="detail-item">
                    <span class="detail-label">
                        <i class="bi bi-key"></i>
                        Admin Email
                    </span>
                    <span class="detail-value">
                        <code>@Model.Email</code>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-panel">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
            <i class="bi bi-pencil-square"></i>
            Bilgileri Düzenle
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
            <i class="bi bi-trash"></i>
            Admini Sil
        </a>
    </div>
</div>

@section Styles {
    <style>
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }

            .page-header h1 {
                font-size: 1.8rem;
                color: var(--dark-color);
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

        .header-actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn-warning {
            padding: 0.75rem 1.5rem;
            background: #ffc107;
            color: #212529;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

            .btn-warning:hover {
                background: #e0a800;
                transform: translateY(-2px);
            }

        .btn-secondary {
            padding: 0.75rem 1.5rem;
            background: #6c757d;
            color: white;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

            .btn-secondary:hover {
                background: #5a6268;
                transform: translateY(-2px);
            }

        .details-container {
            display: flex;
            flex-direction: column;
            gap: 2rem;
        }

        /* Profile Card */
        .profile-card {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: var(--shadow);
            color: white;
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: bold;
            border: 4px solid white;
        }

        .profile-info h2 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .profile-role {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            opacity: 0.9;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .status-active {
            background: rgba(255, 255, 255, 0.3);
            color: white;
        }

        .status-inactive {
            background: rgba(231, 76, 60, 0.3);
            color: white;
        }

        /* Details Grid */
        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .detail-card {
            background: white;
            border-radius: 15px;
            box-shadow: var(--shadow);
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .detail-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-hover);
            }

        .card-header {
            background: var(--light-color);
            padding: 1rem 1.5rem;
            font-weight: 600;
            color: var(--dark-color);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1.1rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            padding: 1rem 0;
            border-bottom: 1px solid var(--border-color);
        }

            .detail-item:last-child {
                border-bottom: none;
                padding-bottom: 0;
            }

            .detail-item:first-child {
                padding-top: 0;
            }

        .detail-label {
            font-size: 0.9rem;
            color: #666;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .detail-value {
            font-size: 1.05rem;
            color: var(--dark-color);
        }

        .text-muted {
            color: #999;
            font-style: italic;
        }

        .cafe-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            border-radius: 20px;
            font-weight: 600;
        }

        code {
            background: #f8f9fa;
            padding: 0.25rem 0.5rem;
            border-radius: 5px;
            font-family: 'Courier New', monospace;
            color: #e83e8c;
            font-size: 0.9rem;
        }

        .badge {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .badge-success {
            background: #d4edda;
            color: #155724;
        }

        .badge-danger {
            background: #f8d7da;
            color: #721c24;
        }

        /* Action Panel */
        .action-panel {
            display: flex;
            gap: 1rem;
            justify-content: center;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: var(--shadow);
        }

        .btn-lg {
            padding: 1rem 2rem;
            font-size: 1.1rem;
        }

        .btn-danger {
            background: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

            .btn-danger:hover {
                background: #c82333;
                transform: translateY(-2px);
                box-shadow: var(--shadow-hover);
            }

        @@media (max-width: 768px) {
            .page-header

        {
            flex-direction: column;
            align-items: stretch;
        }

        .header-actions {
            flex-direction: column;
        }

        .profile-header {
            flex-direction: column;
            text-align: center;
        }

        .details-grid {
            grid-template-columns: 1fr;
        }

        .action-panel {
            flex-direction: column;
        }

        }
    </style>
}