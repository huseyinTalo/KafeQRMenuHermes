@model KafeQRMenu.UI.Areas.Admin.Models.MenuItemVMs.MenuItemCreateViewModel
@{
    ViewData["Title"] = "Yeni Ürün";
    ViewData["BreadcrumbTitle"] = "Yeni Ürün";
}

<div class="fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Yeni Ürün Ekle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" id="itemForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MenuItemName" class="form-label"></label>
                                <input asp-for="MenuItemName" class="form-control"
                                       placeholder="Örn: Margherita Pizza"
                                       maxlength="100"
                                       id="itemName" />
                                <div class="d-flex justify-content-between">
                                    <span asp-validation-for="MenuItemName" class="text-danger"></span>
                                    <small class="text-muted">
                                        <span id="nameCounter">0</span>/100
                                    </small>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="MenuCategoryId" class="form-label"></label>
                                <select asp-for="MenuCategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">Kategori seçin</option>
                                </select>
                                <span asp-validation-for="MenuCategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Ürün açıklaması, içindekiler vb."
                                      maxlength="500"
                                      id="itemDescription"></textarea>
                            <div class="d-flex justify-content-between">
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <small class="text-muted">
                                    <span id="descCounter">0</span>/500
                                </small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="SortOrder" class="form-label"></label>
                                <input asp-for="SortOrder" type="number" class="form-control" min="1" max="1000" />
                                <span asp-validation-for="SortOrder" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label"></label>

                            <div class="image-upload-area" id="dropArea">
                                <div class="upload-placeholder">
                                    <i class="bi bi-image" style="font-size: 3rem; color: #667eea;"></i>
                                    <p class="mb-2">Ürün resmini sürükle-bırak veya seç</p>
                                    <small class="text-muted">JPG, PNG - Maks 5MB</small>
                                </div>
                                <input asp-for="ImageFile" type="file" class="form-control d-none"
                                       accept="image/*" id="imageInput" />
                            </div>

                            <div id="fileInfo" class="alert alert-info mt-2" style="display: none;">
                                <small>
                                    <strong>Seçilen:</strong> <span id="fileName"></span><br>
                                    <strong>Boyut:</strong> <span id="fileSize"></span>
                                    <span id="compressedSize" style="display: none;">
                                        → <strong class="text-success"><span id="compressedSizeValue"></span></strong>
                                    </span>
                                </small>
                            </div>
                        </div>

                        <div class="mb-4" id="previewContainer" style="display: none;">
                            <label class="form-label">Önizleme</label>
                            <div class="position-relative">
                                <div class="border rounded p-3 text-center bg-light">
                                    <img id="imagePreview" src="" alt="Preview"
                                         style="max-width: 100%; max-height: 300px; border-radius: 8px;">
                                </div>
                                <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2"
                                        onclick="removeImage()">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .image-upload-area {
            border: 2px dashed #667eea;
            border-radius: 12px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

            .image-upload-area:hover {
                background: #e8f0fe;
                border-color: #764ba2;
            }

            .image-upload-area.dragover {
                background: #d4e5ff;
                border-color: #0066cc;
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/browser-image-compression@2.0.2/dist/browser-image-compression.min.js"></script>
    <script>
        // Same compression logic as category form
        // Character counters
        document.getElementById('itemName').addEventListener('input', function() {
            document.getElementById('nameCounter').textContent = this.value.length;
        });
        document.getElementById('itemDescription').addEventListener('input', function() {
            document.getElementById('descCounter').textContent = this.value.length;
        });

        // [Include the same drag-drop and compression code from category create]
    </script>
}