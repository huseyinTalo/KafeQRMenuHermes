@model List<KafeQRMenu.BLogic.DTOs.MenuItemDTOs.MenuItemListDTO>
@{
    ViewData["Title"] = "Menü Öğeleri";
    ViewData["BreadcrumbTitle"] = "Menü Öğeleri";
}

<div class="fade-in">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0">Menü Öğeleri</h1>
            <p class="text-muted">Tüm ürünlerinizi yönetin</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Ürün
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-menu-button-wide text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3">Henüz ürün eklenmemiş</h5>
                <p class="text-muted">Menünüz için ilk ürünü ekleyin.</p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle me-2"></i>İlk Ürünü Ekle
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="menuItemsTable">
                        <thead>
                            <tr>
                                <th width="80">Resim</th>
                                <th width="50">Sıra</th>
                                <th>Ürün Adı</th>
                                <th>Kategori</th>
                                <th>Fiyat</th>
                                <th>Açıklama</th>
                                <th>Oluşturulma</th>
                                <th width="150">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(m => m.MenuCategoryName).ThenBy(m => m.SortOrder))
                            {
                                <tr>
                                    <td>
                                        @if (item.ImageFileBytes != null && item.ImageFileBytes.Length > 0)
                                        {
                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ImageFileBytes)"
                                                 alt="@item.MenuItemName"
                                                 class="img-thumbnail"
                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-light text-center d-flex align-items-center justify-content-center"
                                                 style="width: 60px; height: 60px; border-radius: 0.375rem;">
                                                <i class="bi bi-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.SortOrder</span>
                                    </td>
                                    <td>
                                        <strong>@item.MenuItemName</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@item.MenuCategoryName</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">₺@item.Price.ToString("F2")</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@item.Description">
                                                @item.Description
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @item.CreatedTime.ToString("dd.MM.yyyy")
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.MenuItemId"
                                               class="btn btn-sm btn-outline-info" title="Detay">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.MenuItemId"
                                               class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.MenuItemId"
                                               class="btn btn-sm btn-outline-danger" title="Sil">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#menuItemsTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                order: [[3, 'asc'], [1, 'asc']], // Önce kategoriye, sonra sıraya göre sırala (image column added)
                pageLength: 25
            });
        });
    </script>
}
