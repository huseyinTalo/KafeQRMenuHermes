@model KafeQRMenu.UI.Areas.Admin.Models.MenuItemVMs.MenuItemViewModel
@{
    ViewData["Title"] = "Ürün Detayı";
    ViewData["BreadcrumbTitle"] = "Ürün Detayı";
}

<div class="fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@Model.MenuItemName</h5>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.MenuItemId" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImageBase64))
                    {
                        <div class="mb-4 text-center">
                            <img src="data:image/jpeg;base64,@Model.ImageBase64"
                                 alt="@Model.MenuItemName"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height: 300px; object-fit: contain;">
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-3">Ürün Adı:</dt>
                        <dd class="col-sm-9">@Model.MenuItemName</dd>

                        <dt class="col-sm-3">Kategori:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Model.MenuCategoryName</span>
                        </dd>

                        <dt class="col-sm-3">Açıklama:</dt>
                        <dd class="col-sm-9">@(Model.Description ?? "Açıklama girilmemiş")</dd>

                        <dt class="col-sm-3">Fiyat:</dt>
                        <dd class="col-sm-9">
                            <strong class="text-success fs-5">₺@Model.Price.ToString("F2")</strong>
                        </dd>

                        <dt class="col-sm-3">Sıralama:</dt>
                        <dd class="col-sm-9"><span class="badge bg-secondary">@Model.SortOrder</span></dd>

                        <dt class="col-sm-3">Oluşturulma:</dt>
                        <dd class="col-sm-9">@Model.CreatedTime.ToString("dd.MM.yyyy HH:mm")</dd>

                        @if (Model.UpdatedTime.HasValue)
                        {
                            <dt class="col-sm-3">Son Güncelleme:</dt>
                            <dd class="col-sm-9">@Model.UpdatedTime.Value.ToString("dd.MM.yyyy HH:mm")</dd>
                        }
                    </dl>

                    <div class="mt-4 d-flex gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Listeye Dön
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.MenuItemId" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.MenuItemId" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Sil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
