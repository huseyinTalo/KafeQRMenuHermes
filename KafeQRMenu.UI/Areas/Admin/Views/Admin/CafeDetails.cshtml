@model KafeQRMenu.UI.Areas.Admin.Models.AdminVMs.AdminCafeVM

@{
    ViewData["Title"] = "Kafe Detayları";
    ViewData["BreadcrumbTitle"] = "Kafe Detayları";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="fade-in">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="h3 mb-1">Kafe Detayları</h1>
            <p class="text-muted mb-0">Kafe bilgilerinizi görüntüleyin</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="EditCafe" class="btn btn-primary me-2">
                <i class="bi bi-pencil me-2"></i>Düzenle
            </a>
            <a asp-action="Profile" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Profile Dön
            </a>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <!-- Cafe Image Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-5">
                    <!-- Cafe Image -->
                    <div class="mb-4">
                        @if (Model.ImageFileBytes != null && Model.ImageFileBytes.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ImageFileBytes)"
                                 alt="@Model.CafeName"
                                 class="rounded cafe-image"
                                 style="width: 200px; height: 200px; object-fit: cover; border: 4px solid #43e97b;">
                        }
                        else
                        {
                            <div class="cafe-avatar mx-auto"
                                 style="width: 200px; height: 200px; border-radius: 12px; background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); display: flex; align-items: center; justify-content: center;">
                                <i class="bi bi-cup-hot-fill text-white" style="font-size: 5rem;"></i>
                            </div>
                        }
                    </div>

                    <!-- Cafe Name -->
                    <h3 class="mb-2 fw-bold">@Model.CafeName</h3>

                    <!-- Domain -->
                    @if (!string.IsNullOrEmpty(Model.DomainName))
                    {
                        <p class="text-muted mb-0">
                            <i class="bi bi-globe me-2"></i>@Model.DomainName
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Cafe Details Column -->
        <div class="col-lg-8">
            <!-- Cafe Info Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-info-circle me-2 text-primary"></i>Kafe Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item p-3 bg-light rounded">
                                <label class="text-muted small mb-1 d-block">Kafe Adı</label>
                                <span class="fw-semibold">@(Model.CafeName ?? "-")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item p-3 bg-light rounded">
                                <label class="text-muted small mb-1 d-block">Domain</label>
                                <span class="fw-semibold">@(Model.DomainName ?? "-")</span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-item p-3 bg-light rounded">
                                <label class="text-muted small mb-1 d-block">Adres</label>
                                <span class="fw-semibold">@(Model.Address ?? "-")</span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-item p-3 bg-light rounded">
                                <label class="text-muted small mb-1 d-block">Açıklama</label>
                                <span class="fw-semibold">@(Model.Description ?? "-")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1) !important;
            }

        .stat-card {
            position: relative;
            overflow: hidden;
        }

            .stat-card::after {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                width: 200%;
                height: 200%;
                background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            }

        .stat-icon {
            font-size: 3.5rem;
            opacity: 0.25;
            position: absolute;
            right: 1.5rem;
            top: 50%;
            transform: translateY(-50%);
        }

        .cafe-image {
            transition: transform 0.3s ease;
        }

            .cafe-image:hover {
                transform: scale(1.05);
            }

        .cafe-avatar {
            transition: transform 0.3s ease;
        }

            .cafe-avatar:hover {
                transform: scale(1.05);
            }

        .info-item {
            transition: all 0.3s ease;
            border: 1px solid transparent;
        }

            .info-item:hover {
                border-color: #43e97b;
                background-color: #f0fff4 !important;
            }

        .btn-outline-primary:hover,
        .btn-outline-success:hover,
        .btn-outline-info:hover {
            transform: translateY(-2px);
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}
