@model KafeQRMenu.UI.Areas.Admin.Models.ImageFileVMs.ImageFileUploadViewModel
@{
    ViewData["Title"] = "Resim Yükle";
    ViewData["BreadcrumbTitle"] = "Resim Yükle";
}

<div class="fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Yeni Resim Yükle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label asp-for="ImageFile" class="form-label"></label>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(this)" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                            <div class="form-text">Desteklenen formatlar: JPG, PNG, GIF, WEBP (Maksimum 5MB)</div>
                        </div>

                        <div class="mb-4" id="previewContainer" style="display: none;">
                            <label class="form-label">Önizleme</label>
                            <div class="border rounded p-3 text-center">
                                <img id="imagePreview" src="" alt="Preview" style="max-width: 100%; max-height: 300px;">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageContentType" class="form-label"></label>
                            <select asp-for="ImageContentType" class="form-select" asp-items="@ViewBag.ImageContentTypes">
                                <option value="">Resim tipini seçin</option>
                            </select>
                            <span asp-validation-for="ImageContentType" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-cloud-upload me-2"></i>Yükle
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').src = e.target.result;
                    document.getElementById('previewContainer').style.display = 'block';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}