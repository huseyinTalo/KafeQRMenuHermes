@model KafeQRMenu.UI.Areas.Admin.Models.ImageFileVMs.ImageFileListViewModel
@{
    ViewData["Title"] = "Resim Yönetimi";
    ViewData["BreadcrumbTitle"] = "Resimler";
}

<div class="fade-in">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0">Resim Yönetimi</h1>
            <p class="text-muted">Sistemdeki tüm resimleri görüntüleyin ve yönetin</p>
        </div>
        <div class="col-auto">
            <a asp-action="Upload" class="btn btn-primary">
                <i class="bi bi-cloud-upload me-2"></i>Resim Yükle
            </a>
        </div>
    </div>

    @if (Model?.Images == null || !Model.Images.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3">Henüz resim yüklenmemiş</h5>
                <p class="text-muted">Sistemde görüntülenecek resim bulunmuyor.</p>
                <a asp-action="Upload" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle me-2"></i>İlk Resmi Yükle
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var image in Model.Images)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <div class="card h-100 image-card">
                                <div class="card-img-top position-relative" style="height: 200px; overflow: hidden;">
                                    <img src="data:image/jpeg;base64,@image.ImageBase64"
                                         alt="Image"
                                         class="w-100 h-100"
                                         style="object-fit: cover;">

                                    @if (!image.IsActive)
                                    {
                                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex align-items-center justify-content-center">
                                            <span class="badge bg-warning">Pasif</span>
                                        </div>
                                    }
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="badge bg-primary">@image.ContentTypeName</span>
                                        @if (image.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                    </div>

                                    @if (!string.IsNullOrEmpty(image.RelatedEntityName))
                                    {
                                        <small class="text-muted d-block mb-2">
                                            <i class="bi bi-link-45deg"></i> @image.RelatedEntityName
                                        </small>
                                    }

                                    <small class="text-muted d-block mb-2">
                                        <i class="bi bi-hdd"></i> @image.FileSize
                                    </small>

                                    <small class="text-muted d-block mb-3">
                                        <i class="bi bi-calendar"></i> @image.CreatedTime.ToString("dd.MM.yyyy HH:mm")
                                    </small>

                                    <div class="d-flex gap-2">
                                        <a asp-action="Delete" asp-route-id="@image.ImageId"
                                           class="btn btn-sm btn-outline-danger flex-fill">
                                            <i class="bi bi-trash"></i> Sil
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Sayfalama" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Önceki</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Sonraki</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    }
</div>

<style>
    .image-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .image-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }
</style>