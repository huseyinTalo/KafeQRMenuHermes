@model KafeQRMenu.UI.Models.HomeVMs.MenuVM
@{
    ViewData["Title"] = Model.Cafe?.CafeName ?? "Menü";
}

<div class="menu-wrapper">
    <div class="menu-container">
        <!-- Elegant Header -->
        <header class="menu-header">
            <div class="header-decoration"></div>
            <div class="header-content">
                <div class="restaurant-brand">
                    <div class="restaurant-emblem">
                        <i class="bi bi-cup-hot-fill"></i>
                    </div>
                    <h1 class="restaurant-name">@Model.Cafe.CafeName</h1>
                    @if (!string.IsNullOrEmpty(Model.Cafe.Description))
                    {
                        <p class="restaurant-tagline">@Model.Cafe.Description</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Cafe.Address))
                    {
                        <div class="restaurant-details">
                            <span class="detail-item">
                                <i class="bi bi-geo-alt"></i> @Model.Cafe.Address
                            </span>
                        </div>
                    }
                </div>
            </div>
            <div class="header-divider">
                <div class="divider-ornament"></div>
            </div>
        </header>

        <!-- Search Bar -->
        <div class="search-section">
            <div class="search-container">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text"
                           id="searchInput"
                           placeholder="Menüde ara..."
                           class="search-field">
                    <button class="clear-search" id="clearSearch" style="display: none;">
                        <i class="bi bi-x-circle"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Category Tabs -->
        <nav class="category-tabs">
            <div class="tabs-container">
                @if (Model.Categories != null && Model.Categories.Any())
                {
                    @foreach (var category in Model.Categories.OrderBy(c => c.SortOrder))
                    {
                        <button class="tab-button" data-category="@category.MenuCategoryId">
                            @category.MenuCategoryName
                        </button>
                    }
                }
            </div>
        </nav>

        <!-- Menu Content -->
        <main class="menu-board">
            @if (Model.Products != null && Model.Products.Any() && Model.Categories != null && Model.Categories.Any())
            {
                @foreach (var category in Model.Categories.OrderBy(c => c.SortOrder))
                {
                    var categoryItems = Model.Products
                    .Where(p => p.MenuCategoryId == category.MenuCategoryId)
                    .OrderBy(p => p.SortOrder)
                    .ToList();

                    @if (categoryItems.Any())
                    {
                        <section class="menu-category" id="category-@category.MenuCategoryId">
                            <div class="category-header" data-category-id="@category.MenuCategoryId">
                                <div class="category-title-wrapper">
                                    <h2 class="category-name">
                                        <span class="category-text">@category.MenuCategoryName</span>
                                        <span class="category-line"></span>
                                    </h2>
                                    @if (!string.IsNullOrEmpty(category.Description))
                                    {
                                        <p class="category-subtitle">@category.Description</p>
                                    }
                                </div>
                                <button class="category-toggle" aria-label="Toggle category">
                                    <i class="bi bi-chevron-down"></i>
                                </button>
                            </div>

                            <div class="menu-items">
                                @foreach (var product in categoryItems)
                                {
                                    <article class="menu-entry" data-name="@product.MenuItemName.ToLower()">
                                        <div class="entry-content">
                                            @if (!string.IsNullOrEmpty(product.ImageFileBase64))
                                            {
                                                <div class="entry-image">
                                                    <img src="data:image/jpeg;base64,@product.ImageFileBase64"
                                                         alt="@product.MenuItemName"
                                                         loading="lazy">
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="entry-image placeholder">
                                                    <i class="bi bi-image"></i>
                                                </div>
                                            }

                                            <div class="entry-details">
                                                <h3 class="entry-title">@product.MenuItemName</h3>
                                                @if (!string.IsNullOrEmpty(product.Description))
                                                {
                                                    <p class="entry-description">@product.Description</p>
                                                }
                                            </div>

                                            <div class="entry-price">
                                                <span class="price-dots"></span>
                                                <span class="price-amount">₺@product.Price.ToString("N0")</span>
                                            </div>
                                        </div>
                                    </article>
                                }
                            </div>
                        </section>
                    }
                }

                <!-- No Results -->
                <div class="no-results" id="noResults" style="display: none;">
                    <i class="bi bi-search"></i>
                    <h3>Sonuç Bulunamadı</h3>
                    <p>Aradığınız ürün menüde bulunmuyor</p>
                </div>
            }
            else
            {
                <div class="empty-menu">
                    <i class="bi bi-journal-x"></i>
                    <h3>Menü Hazırlanıyor</h3>
                    <p>Yakında hizmetinizde olacağız</p>
                </div>
            }
        </main>

        <!-- Back to Top -->
        <button class="scroll-top" id="scrollTop">
            <i class="bi bi-arrow-up"></i>
        </button>
    </div>
</div>

@section Styles {
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            /* Restaurant Menu Colors */
            --menu-primary: #8B4513; /* Saddle Brown */
            --menu-secondary: #D2691E; /* Chocolate */
            --menu-accent: #CD853F; /* Peru */
            --menu-gold: #DAA520; /* Goldenrod */
            /* Text Colors */
            --text-primary: #2C1810;
            --text-secondary: #5D4E37;
            --text-muted: #8B7355;
            /* Background Colors */
            --bg-cream: #FFF8F0;
            --bg-white: #FFFFFF;
            --bg-light: #FAF6F2;
            --bg-tan: #F5E6D3;
            /* UI Colors */
            --border-light: #E8DDD5;
            --border-medium: #D4C4B0;
            --shadow-color: rgba(139, 69, 19, 0.1);
            /* Transitions */
            --transition: all 0.3s ease;
            --transition-fast: all 0.15s ease;
        }

        body {
            font-family: 'Georgia', 'Times New Roman', serif;
            background: var(--bg-cream);
            color: var(--text-primary);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }

        /* ========== Menu Container ========== */
        .menu-wrapper {
            min-height: 100vh;
            background: linear-gradient(180deg, var(--bg-cream) 0%, var(--bg-light) 100%);
        }

        .menu-container {
            max-width: 1200px;
            margin: 0 auto;
            background: var(--bg-white);
            box-shadow: 0 0 50px var(--shadow-color);
        }

        /* ========== Header ========== */
        .menu-header {
            background: linear-gradient(135deg, var(--bg-cream) 0%, var(--bg-tan) 100%);
            padding: 3rem 2rem 2rem;
            text-align: center;
            position: relative;
            border-bottom: 3px double var(--border-medium);
        }

        .header-decoration {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 8px;
            background: repeating-linear-gradient( 90deg, var(--menu-primary) 0px, var(--menu-primary) 10px, var(--menu-gold) 10px, var(--menu-gold) 20px );
        }

        .restaurant-emblem {
            width: 80px;
            height: 80px;
            margin: 0 auto 1rem;
            background: var(--menu-primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--menu-gold);
            font-size: 2.5rem;
            box-shadow: 0 4px 15px var(--shadow-color);
        }

        .restaurant-name {
            font-size: 2.5rem;
            font-weight: 400;
            color: var(--menu-primary);
            margin-bottom: 0.5rem;
            font-family: 'Playfair Display', 'Georgia', serif;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .restaurant-tagline {
            font-size: 1.125rem;
            color: var(--text-secondary);
            font-style: italic;
            margin-bottom: 1.5rem;
        }

        .restaurant-details {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            font-size: 0.95rem;
            color: var(--text-muted);
            margin-top: 1rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .detail-item i {
                color: var(--menu-secondary);
            }

        .header-divider {
            margin-top: 2rem;
            position: relative;
        }

        .divider-ornament {
            width: 100px;
            height: 2px;
            background: var(--menu-primary);
            margin: 0 auto;
            position: relative;
        }

            .divider-ornament::before,
            .divider-ornament::after {
                content: '◆';
                position: absolute;
                top: -10px;
                color: var(--menu-gold);
                font-size: 1.25rem;
            }

            .divider-ornament::before {
                left: -20px;
            }

            .divider-ornament::after {
                right: -20px;
            }

        /* ========== Search Section ========== */
        .search-section {
            background: var(--bg-white);
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-light);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .search-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .search-box {
            position: relative;
            display: flex;
            align-items: center;
            background: var(--bg-light);
            border: 1px solid var(--border-light);
            border-radius: 30px;
            padding: 0.75rem 1.25rem;
            transition: var(--transition);
        }

            .search-box:focus-within {
                border-color: var(--menu-secondary);
                box-shadow: 0 0 0 3px rgba(210, 105, 30, 0.1);
            }

            .search-box i {
                color: var(--text-muted);
                margin-right: 0.75rem;
            }

        .search-field {
            flex: 1;
            border: none;
            background: transparent;
            outline: none;
            font-family: inherit;
            font-size: 1rem;
            color: var(--text-primary);
        }

        .clear-search {
            background: none;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            padding: 0.25rem;
            display: flex;
            align-items: center;
            transition: var(--transition-fast);
        }

            .clear-search:hover {
                color: var(--menu-secondary);
            }

        /* ========== Category Tabs ========== */
        .category-tabs {
            background: var(--bg-light);
            border-bottom: 2px solid var(--border-medium);
            padding: 0 1rem;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: thin;
            scrollbar-color: var(--border-medium) transparent;
        }

        .tabs-container {
            display: flex;
            gap: 0.5rem;
            padding: 1rem 0;
            min-width: max-content;
        }

        .tab-button {
            padding: 0.625rem 1.5rem;
            background: transparent;
            border: 2px solid transparent;
            border-radius: 25px;
            font-family: inherit;
            font-size: 0.95rem;
            color: var(--text-secondary);
            cursor: pointer;
            transition: var(--transition);
            white-space: nowrap;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 500;
        }

            .tab-button:hover {
                background: var(--bg-white);
                border-color: var(--menu-secondary);
                color: var(--menu-primary);
            }

            .tab-button.active {
                background: var(--menu-primary);
                color: var(--bg-white);
                border-color: var(--menu-primary);
            }

        /* ========== Menu Board ========== */
        .menu-board {
            padding: 2rem;
            max-width: 1000px;
            margin: 0 auto;
        }

        /* ========== Menu Category ========== */
        .menu-category {
            margin-bottom: 3rem;
        }

        .category-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            cursor: pointer;
            user-select: none;
            padding: 0.5rem;
            border-radius: 8px;
            transition: var(--transition-fast);
        }

            .category-header:hover {
                background: var(--bg-light);
            }

        .category-title-wrapper {
            flex: 1;
        }

        .category-toggle {
            width: 36px;
            height: 36px;
            background: var(--bg-tan);
            border: 1px solid var(--border-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            color: var(--text-secondary);
            font-size: 1.125rem;
            flex-shrink: 0;
        }

            .category-toggle:hover {
                background: var(--menu-secondary);
                color: var(--bg-white);
            }

            .category-toggle i {
                transition: transform 0.3s ease;
            }

        .menu-category.collapsed .category-toggle i {
            transform: rotate(-90deg);
        }

        .menu-category.collapsed .category-header {
            background: var(--bg-tan);
            margin-bottom: 0.5rem;
        }

        .category-name {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            position: relative;
        }

        .category-text {
            font-size: 1.75rem;
            font-weight: 400;
            color: var(--menu-primary);
            text-transform: uppercase;
            letter-spacing: 2px;
            font-family: 'Playfair Display', 'Georgia', serif;
        }

        .category-line {
            flex: 1;
            height: 2px;
            background: linear-gradient(90deg, var(--menu-gold) 0%, transparent 100%);
            margin-left: 1rem;
        }

        .category-subtitle {
            font-size: 0.95rem;
            color: var(--text-muted);
            font-style: italic;
            margin-top: 0.5rem;
        }

        /* ========== Menu Items ========== */
        .menu-items {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            overflow: hidden;
            max-height: 3000px;
            opacity: 1;
            transition: max-height 0.4s ease, opacity 0.3s ease;
        }

        .menu-category.collapsed .menu-items {
            max-height: 0;
            opacity: 0;
            gap: 0;
        }

        /* ========== Menu Entry (Full Width Horizontal Layout) ========== */
        .menu-entry {
            background: var(--bg-white);
            border: 1px solid var(--border-light);
            border-radius: 8px;
            padding: 1rem 1.25rem;
            transition: var(--transition);
            cursor: pointer;
            width: 100%;
            position: relative;
        }

            /* Subtle alternating backgrounds for better readability */
            .menu-entry:nth-child(even) {
                background: var(--bg-light);
            }

            /* Add a subtle left border accent */
            .menu-entry::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 4px;
                background: transparent;
                border-radius: 8px 0 0 8px;
                transition: var(--transition);
            }

            .menu-entry:hover::before {
                background: var(--menu-secondary);
            }

            .menu-entry:hover {
                box-shadow: 0 4px 12px var(--shadow-color);
                transform: translateY(-2px);
                border-color: var(--menu-secondary);
            }

        .entry-content {
            display: flex;
            align-items: center;
            gap: 1rem;
            width: 100%;
        }

        .entry-image {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            overflow: hidden;
            flex-shrink: 0;
            box-shadow: 0 2px 8px var(--shadow-color);
        }

            .entry-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: var(--transition);
            }

        .menu-entry:hover .entry-image img {
            transform: scale(1.1);
        }

        .entry-image.placeholder {
            background: var(--bg-tan);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-muted);
            font-size: 1.5rem;
        }

        .entry-details {
            flex: 1;
            min-width: 0;
            padding-right: 1rem;
        }

        .entry-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.25rem;
            font-family: 'Playfair Display', 'Georgia', serif;
        }

        .entry-description {
            font-size: 0.875rem;
            color: var(--text-muted);
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .popular-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            background: var(--menu-gold);
            color: var(--bg-white);
            padding: 0.125rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
            margin-top: 0.5rem;
        }

        .entry-price {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            flex-shrink: 0;
            margin-left: auto;
        }

        .price-dots {
            width: 60px;
            height: 1px;
            background-image: repeating-linear-gradient( to right, var(--border-medium) 0, var(--border-medium) 3px, transparent 3px, transparent 6px );
            display: none; /* Hide on mobile, show on desktop */
        }

        @@media (min-width: 768px) {
            .price-dots

        {
            display: block;
        }

        }

        .price-amount {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--menu-primary);
            min-width: max-content;
        }

        /* ========== Larger Screens - Keep Vertical Layout ========== */
        @@media (min-width: 768px) {
            .menu-entry

        {
            padding: 1.25rem 1.5rem;
        }

        .entry-content {
            gap: 1.25rem;
        }

        .entry-image {
            width: 90px;
            height: 90px;
        }

        .entry-title {
            font-size: 1.25rem;
        }

        .entry-description {
            font-size: 0.9375rem;
        }

        .price-amount {
            font-size: 1.375rem;
        }

        }

        @@media (min-width: 1024px) {
            .menu-board

        {
            max-width: 900px;
        }

        .entry-image {
            width: 100px;
            height: 100px;
        }

        .entry-content {
            gap: 1.5rem;
        }

        }

        /* ========== Mobile Responsive ========== */
        @@media (max-width: 767px) {
            .restaurant-name

        {
            font-size: 1.75rem;
            letter-spacing: 1px;
        }

        .restaurant-details {
            flex-direction: column;
            gap: 0.75rem;
            align-items: center;
        }

        .category-text {
            font-size: 1.375rem;
        }

        .menu-board {
            padding: 1.5rem 1rem;
        }

        .menu-entry {
            padding: 0.875rem;
        }

        .entry-content {
            gap: 0.75rem;
        }

        .entry-image {
            width: 70px;
            height: 70px;
        }

        .entry-title {
            font-size: 1rem;
        }

        .entry-description {
            font-size: 0.8125rem;
            -webkit-line-clamp: 1; /* Show only 1 line on mobile to save space */
        }

        .price-amount {
            font-size: 1.125rem;
        }

        .tabs-container {
            padding: 0.75rem 0;
        }

        .tab-button {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
        }

        }

        /* ========== Very Small Mobile ========== */
        @@media (max-width: 420px) {
            .entry-details

        {
            padding-right: 0.5rem;
        }

        .entry-price {
            flex-direction: column;
            align-items: flex-end;
        }

        .price-amount {
            font-size: 1rem;
        }

        }

        /* ========== Empty States ========== */
        .no-results,
        .empty-menu {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-muted);
        }

            .no-results i,
            .empty-menu i {
                font-size: 3rem;
                color: var(--border-medium);
                margin-bottom: 1rem;
            }

            .no-results h3,
            .empty-menu h3 {
                font-size: 1.5rem;
                color: var(--text-secondary);
                margin-bottom: 0.5rem;
            }

        /* ========== Scroll Top Button ========== */
        .scroll-top {
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            width: 50px;
            height: 50px;
            background: var(--menu-primary);
            color: var(--bg-white);
            border: 2px solid var(--menu-gold);
            border-radius: 50%;
            display: none;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            box-shadow: 0 4px 12px var(--shadow-color);
            z-index: 99;
        }

            .scroll-top:hover {
                background: var(--menu-secondary);
                transform: translateY(-3px);
                box-shadow: 0 6px 20px var(--shadow-color);
            }

            .scroll-top.visible {
                display: flex;
            }

        /* ========== Print Styles ========== */
        @@media print {
            .search-section, .category-tabs, .scroll-top

        {
            display: none !important;
        }

        .menu-entry {
            break-inside: avoid;
        }

        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const clearSearch = document.getElementById('clearSearch');
            const noResults = document.getElementById('noResults');
            const scrollTop = document.getElementById('scrollTop');

            // Category collapse/expand functionality
            const categoryHeaders = document.querySelectorAll('.category-header');

            categoryHeaders.forEach(header => {
                header.addEventListener('click', function(e) {
                    // Don't collapse if clicking on links
                    if (e.target.closest('a')) return;

                    const category = this.closest('.menu-category');
                    category.classList.toggle('collapsed');

                    // Save state to localStorage
                    const categoryId = this.dataset.categoryId;
                    if (categoryId) {
                        const collapsedCategories = JSON.parse(localStorage.getItem('collapsedCategories') || '[]');
                        if (category.classList.contains('collapsed')) {
                            if (!collapsedCategories.includes(categoryId)) {
                                collapsedCategories.push(categoryId);
                            }
                        } else {
                            const index = collapsedCategories.indexOf(categoryId);
                            if (index > -1) {
                                collapsedCategories.splice(index, 1);
                            }
                        }
                        localStorage.setItem('collapsedCategories', JSON.stringify(collapsedCategories));
                    }
                });
            });

            // Restore collapsed state from localStorage
            const restoreCollapsedState = () => {
                const collapsedCategories = JSON.parse(localStorage.getItem('collapsedCategories') || '[]');
                collapsedCategories.forEach(categoryId => {
                    const category = document.getElementById('category-' + categoryId);
                    if (category) {
                        category.classList.add('collapsed');
                    }
                });
            };

            restoreCollapsedState();

            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                clearSearch.style.display = searchTerm ? 'block' : 'none';

                let hasResults = false;
                const categories = document.querySelectorAll('.menu-category');

                if (!searchTerm) {
                    categories.forEach(cat => {
                        cat.style.display = 'block';
                        // Restore original collapse state
                        restoreCollapsedState();
                    });
                    document.querySelectorAll('.menu-entry').forEach(item => item.style.display = 'block');
                    noResults.style.display = 'none';
                    return;
                }

                categories.forEach(category => {
                    const items = category.querySelectorAll('.menu-entry');
                    let hasVisibleItems = false;

                    items.forEach(item => {
                        const itemName = item.getAttribute('data-name');
                        if (itemName && itemName.includes(searchTerm)) {
                            item.style.display = 'block';
                            hasVisibleItems = true;
                            hasResults = true;
                        } else {
                            item.style.display = 'none';
                        }
                    });

                    if (hasVisibleItems) {
                        category.style.display = 'block';
                        // Auto-expand categories with results
                        category.classList.remove('collapsed');
                    } else {
                        category.style.display = 'none';
                    }
                });

                noResults.style.display = hasResults ? 'none' : 'block';
            });

            clearSearch.addEventListener('click', function() {
                searchInput.value = '';
                searchInput.dispatchEvent(new Event('input'));
                searchInput.focus();
            });

            // Category tabs navigation
            const tabs = document.querySelectorAll('.tab-button');
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    tabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');

                    const categoryId = this.getAttribute('data-category');
                    const target = document.getElementById('category-' + categoryId);
                    if (target) {
                        const offset = target.offsetTop - 160;
                        window.scrollTo({
                            top: offset,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Highlight active category on scroll
            let scrollTimer = null;
            window.addEventListener('scroll', function() {
                if (scrollTimer) clearTimeout(scrollTimer);

                scrollTimer = setTimeout(function() {
                    const scrollPos = window.pageYOffset + 200;
                    const categories = document.querySelectorAll('.menu-category');

                    categories.forEach(category => {
                        const top = category.offsetTop;
                        const bottom = top + category.offsetHeight;

                        if (scrollPos >= top && scrollPos < bottom) {
                            const id = category.id.replace('category-', '');
                            tabs.forEach(tab => {
                                if (tab.getAttribute('data-category') === id) {
                                    tabs.forEach(t => t.classList.remove('active'));
                                    tab.classList.add('active');
                                }
                            });
                        }
                    });

                    // Show/hide scroll to top button
                    scrollTop.classList.toggle('visible', window.pageYOffset > 300);
                }, 100);
            });

            // Scroll to top
            scrollTop.addEventListener('click', function() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
        });
    </script>
}
