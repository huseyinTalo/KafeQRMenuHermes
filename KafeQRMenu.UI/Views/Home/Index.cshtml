@model KafeQRMenu.UI.Models.HomeVMs.MenuVM
@{
    ViewData["Title"] = Model.Cafe?.CafeName ?? "Menü";
}
@{
    var dateToShow = (Model.UpdatedTime == null || Model.UpdatedTime == default(DateTime))
        ? Model.CreatedTime
        : Model.UpdatedTime;

    var formattedDate = (dateToShow ?? DateTime.Now).ToString("dd.MM.yyyy");
}
<div class="menu-wrapper">
    <div class="menu-container">
        <!-- Elegant Header -->
        <header class="menu-header">
            <div class="header-decoration"></div>
            <div class="header-content">
                <div class="restaurant-brand">
                    <div class="restaurant-emblem">
                        <img src="~/caffeine-overload.png" alt="Logo" />
                    </div>
                    <h1 class="restaurant-name">@Model.Cafe.CafeName</h1>
                    @if (!string.IsNullOrEmpty(Model.Cafe.Description))
                    {
                        <p class="restaurant-tagline">@Model.Cafe.Description</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Cafe.Address))
                    {
                        <div class="restaurant-details">
                            <span class="detail-item">
                                <i class="bi bi-geo-alt"></i> @Model.Cafe.Address
                            </span>
                        </div>
                    }
                </div>
            </div>
            <div class="header-divider">
                <div class="divider-ornament"></div>
            </div>
        </header>

        <!-- Search Bar -->
        <div class="search-section">
            <div class="search-container">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text"
                           id="searchInput"
                           placeholder="Menüde ara..."
                           class="search-field">
                    <button class="clear-search" id="clearSearch" style="display: none;">
                        <i class="bi bi-x-circle"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Category Tabs -->
        <nav class="category-tabs">
            <div class="tabs-container">
                @if (Model.Categories != null && Model.Categories.Any())
                {
                    @foreach (var category in Model.Categories.OrderBy(c => c.SortOrder))
                    {
                        <button class="tab-button" data-category="@category.MenuCategoryId">
                            @if (!string.IsNullOrEmpty(category.ImageFileBase64))
                            {
                                <div class="tab-icon">
                                    <img src="data:image/jpeg;base64,@category.ImageFileBase64"
                                         alt="@category.MenuCategoryName">
                                </div>
                            }
                            <span>@category.MenuCategoryName</span>
                        </button>
                    }
                }
            </div>
        </nav>

        <!-- Menu Content -->
        <main class="menu-board">
            @if (Model.Products != null && Model.Products.Any() && Model.Categories != null && Model.Categories.Any())
            {
                @foreach (var category in Model.Categories.OrderBy(c => c.SortOrder))
                {
                    var categoryItems = Model.Products
                    .Where(p => p.MenuCategoryId == category.MenuCategoryId)
                    .OrderBy(p => p.SortOrder)
                    .ToList();

                    @if (categoryItems.Any())
                    {
                        <section class="menu-category" id="category-@category.MenuCategoryId">
                            <div class="category-header" data-category-id="@category.MenuCategoryId">
                                <div class="category-title-wrapper">
                                    <div class="category-name">
                                        @if (!string.IsNullOrEmpty(category.ImageFileBase64))
                                        {
                                            <div class="category-image">
                                                <img src="data:image/jpeg;base64,@category.ImageFileBase64"
                                                     alt="@category.MenuCategoryName">
                                            </div>
                                        }
                                        <div class="category-text-content">
                                            <h2 class="category-text">@category.MenuCategoryName</h2>
                                            @if (!string.IsNullOrEmpty(category.Description))
                                            {
                                                <p class="category-subtitle">@category.Description</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <button class="category-toggle" aria-label="Toggle category">
                                    <i class="bi bi-chevron-down"></i>
                                </button>
                            </div>

                            <div class="menu-items">
                                @foreach (var product in categoryItems)
                                {
                                    <article class="menu-entry" data-name="@product.MenuItemName.ToLower()">
                                        <div class="entry-content">
                                            @if (!string.IsNullOrEmpty(product.ImageFileBase64))
                                            {
                                                <div class="entry-image">
                                                    <img src="data:image/jpeg;base64,@product.ImageFileBase64"
                                                         alt="@product.MenuItemName"
                                                         loading="lazy">
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="entry-image placeholder">
                                                    <i class="bi bi-image"></i>
                                                </div>
                                            }

                                            <div class="entry-details">
                                                <h3 class="entry-title">@product.MenuItemName</h3>
                                                @if (!string.IsNullOrEmpty(product.Description))
                                                {
                                                    <p class="entry-description">@product.Description</p>
                                                }
                                            </div>

                                            <div class="entry-price">
                                                <span class="price-amount">₺@product.Price.ToString("N0")</span>
                                            </div>
                                        </div>
                                    </article>
                                }
                            </div>
                        </section>
                    }
                }

                <!-- No Results -->
                <div class="no-results" id="noResults" style="display: none;">
                    <i class="bi bi-search"></i>
                    <h3>Sonuç Bulunamadı</h3>
                    <p>Aradığınız ürün menüde bulunmuyor</p>
                </div>
            }
            else
            {
                <div class="empty-menu">
                    <i class="bi bi-journal-x"></i>
                    <h3>Menü Hazırlanıyor</h3>
                    <p>Yakında hizmetinizde olacağız</p>
                </div>
            }
        </main>

        <!-- Price Info Footer -->
        <footer class="menu-footer">
            <div class="footer-content">
                <div class="footer-info">
                    <p class="footer-text">
                        <i class="bi bi-calendar-check me-1"></i>
                        <span>
                            Fiyatlarımız <strong>@formattedDate</strong> tarihinde güncellenmiştir
                        </span>
                    </p>
                    <p class="footer-text">
                        <i class="bi bi-info-circle me-1"></i>
                        <span>Fiyatlarımıza KDV dahildir</span>
                    </p>
                </div>
            </div>
        </footer>

        <!-- Back to Top -->
        <button class="scroll-top" id="scrollTop">
            <i class="bi bi-arrow-up"></i>
        </button>
        <div class="product-modal" id="productModal">
            <div class="modal-overlay"></div>
            <div class="modal-content">
                <button class="modal-close" id="modalClose">
                    <i class="bi bi-x-lg"></i>
                </button>
                <div class="modal-body">
                    <div class="modal-image-container">
                        <img id="modalImage" src="" alt="">
                    </div>
                    <div class="modal-details">
                        <h2 class="modal-title" id="modalTitle"></h2>
                        <p class="modal-category" id="modalCategory"></p>
                        <p class="modal-description" id="modalDescription"></p>
                        <div class="modal-price">
                            <span class="modal-price-label">Fiyat</span>
                            <span class="modal-price-amount" id="modalPrice"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">


    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            /* Modern Minimalist Color Palette - 60-30-10 Rule */
            --primary-green: #1B4332; /* Koyu Yeşil - 60% (Primary) */
            --primary-green-light: #2D5A47;
            --primary-green-dark: #0F2419;
            --accent-mustard: #D4A574; /* Hardal - 30% (Secondary) */
            --accent-mustard-light: #E3C19F;
            --accent-mustard-dark: #B88A5C;
            --neutral-white: #FFFFFF; /* Beyaz - 10% (Accent) */
            --neutral-cream: #F8F6F3;
            --neutral-light: #F0EDE8;
            /* Text Colors */
            --text-primary: #1B4332;
            --text-secondary: #2D5A47;
            --text-muted: #6B8576;
            /* Shadow */
            --shadow-subtle: 0 2px 8px rgba(27, 67, 50, 0.08);
            --shadow-medium: 0 4px 16px rgba(27, 67, 50, 0.12);
            --shadow-strong: 0 8px 24px rgba(27, 67, 50, 0.16);
            /* Transitions */
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --transition-fast: all 0.15s ease;
        }

        body {
            font-family: 'Montserrat';
            background: var(--neutral-cream);
            color: var(--text-primary);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }
        /* ========== Product Modal ========== */
        .product-modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 1000;
            display: none;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

            .product-modal.active {
                display: flex;
                animation: fadeIn 0.3s ease;
            }

        .modal-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(27, 67, 50, 0.85);
            backdrop-filter: blur(8px);
        }

        .modal-content {
            position: relative;
            background: var(--neutral-white);
            border-radius: 24px;
            max-width: 800px;
            width: 100%;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: var(--shadow-strong);
            animation: slideUp 0.3s ease;
            z-index: 1;
        }

        .modal-close {
            position: absolute;
            top: 1rem;
            right: 1rem;
            width: 44px;
            height: 44px;
            background: var(--neutral-white);
            border: 2px solid var(--neutral-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            z-index: 2;
            color: var(--text-secondary);
            font-size: 1.25rem;
        }

            .modal-close:hover {
                background: var(--accent-mustard);
                border-color: var(--accent-mustard);
                color: var(--neutral-white);
                transform: rotate(90deg);
            }

        .modal-body {
            display: flex;
            flex-direction: column;
        }

        .modal-image-container {
            width: 100%;
            height: 400px;
            overflow: hidden;
            border-radius: 24px 24px 0 0;
            background: var(--neutral-light);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .modal-image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .modal-image-container.no-image {
                background: linear-gradient(135deg, var(--neutral-light) 0%, var(--neutral-cream) 100%);
                color: var(--text-muted);
                font-size: 4rem;
            }

        .modal-details {
            padding: 2rem;
        }

        .modal-title {
            font-family: 'Montserrat';
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-green);
            margin-bottom: 0.5rem;
        }

        .modal-category {
            font-size: 0.9375rem;
            color: var(--accent-mustard-dark);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 1rem;
        }

        .modal-description {
            font-size: 1.0625rem;
            color: var(--text-secondary);
            line-height: 1.8;
            margin-bottom: 2rem;
            font-weight: 300;
        }

        .modal-price {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: var(--neutral-cream);
            padding: 1.25rem 1.5rem;
            border-radius: 16px;
            border: 2px solid var(--accent-mustard-light);
        }

        .modal-price-label {
            font-size: 1rem;
            color: var(--text-muted);
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .modal-price-amount {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-green);
            background: var(--accent-mustard);
            padding: 0.5rem 1.25rem;
            border-radius: 12px;
            color: var(--neutral-white);
        }

        /* Modal Animations */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive Modal */
        @@media (max-width: 767px) {
            .modal-content

        {
            max-height: 95vh;
            border-radius: 20px;
        }

        .modal-image-container {
            height: 280px;
            border-radius: 20px 20px 0 0;
        }

        .modal-details {
            padding: 1.5rem;
        }

        .modal-title {
            font-size: 1.5rem;
        }

        .modal-category {
            font-size: 0.875rem;
        }

        .modal-description {
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }

        .modal-price {
            padding: 1rem 1.25rem;
            flex-direction: column;
            gap: 0.75rem;
            align-items: stretch;
            text-align: center;
        }

        .modal-price-amount {
            font-size: 1.75rem;
            padding: 0.625rem 1rem;
        }

        .modal-close {
            width: 40px;
            height: 40px;
            top: 0.75rem;
            right: 0.75rem;
        }

        }

        /* Prevent body scroll when modal is open */
        body.modal-open {
            overflow: hidden;
        }
        /* ========== Menu Container ========== */
        .menu-wrapper {
            min-height: 100vh;
            background: linear-gradient(180deg, var(--neutral-cream) 0%, var(--neutral-light) 100%);
        }

        .menu-container {
            max-width: 1200px;
            margin: 0 auto;
            background: var(--neutral-white);
            box-shadow: var(--shadow-medium);
        }

        /* ========== Header ========== */
        .menu-header {
            background: var(--primary-green);
            padding: 3rem 2rem 2.5rem;
            text-align: center;
            position: relative;
        }

        .header-decoration {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-mustard) 0%, var(--accent-mustard-light) 50%, var(--accent-mustard) 100% );
        }

        .restaurant-emblem {
            width: 90px;
            height: 90px;
            margin: 0 auto 1.5rem;
            background: var(--accent-mustard);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--neutral-white);
            font-size: 2.75rem;
            box-shadow: var(--shadow-medium);
            transition: var(--transition);
        }

            .restaurant-emblem img {
                width: 100%;
                height: 100%;
                object-fit: contain; /* Logo oranını korur */
                padding: 8px; /* Kenarlarda biraz boşluk */
            }
            .restaurant-emblem:hover {
                transform: scale(1.05) rotate(5deg);
            }

        .restaurant-name {
            font-family: 'Montserrat'; /* ✅ MONTSERRAT */
            font-size: 3rem;
            font-weight: 700; /* Bold yaparak öne çıkar */
            color: var(--neutral-white);
            margin-bottom: 0.75rem;
            letter-spacing: 1px;
        }

        .restaurant-tagline {
            font-size: 1.125rem;
            color: var(--accent-mustard-light);
            font-style: italic;
            margin-bottom: 1.5rem;
            font-weight: 300;
        }

        .restaurant-details {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            font-size: 0.95rem;
            color: var(--neutral-cream);
            margin-top: 1rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .detail-item i {
                color: var(--accent-mustard);
            }

        .header-divider {
            margin-top: 2rem;
            position: relative;
        }

        .divider-ornament {
            width: 80px;
            height: 2px;
            background: var(--accent-mustard);
            margin: 0 auto;
            border-radius: 2px;
        }

        /* ========== Search Section ========== */
        .search-section {
            background: var(--neutral-white);
            padding: 1.5rem;
            border-bottom: 1px solid var(--neutral-light);
            position: sticky;
            top: 0;
            z-index: 100;
            backdrop-filter: blur(10px);
        }

        .search-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .search-box {
            position: relative;
            display: flex;
            align-items: center;
            background: var(--neutral-cream);
            border: 2px solid transparent;
            border-radius: 50px;
            padding: 0.875rem 1.5rem;
            transition: var(--transition);
        }

            .search-box:focus-within {
                border-color: var(--accent-mustard);
                background: var(--neutral-white);
                box-shadow: 0 0 0 4px rgba(212, 165, 116, 0.1);
            }

            .search-box i {
                color: var(--text-muted);
                margin-right: 0.75rem;
                font-size: 1.125rem;
            }

        .search-field {
            flex: 1;
            border: none;
            background: transparent;
            outline: none;
            font-size: 1rem;
            color: var(--text-primary);
        }

            .search-field::placeholder {
                color: var(--text-muted);
            }

        .clear-search {
            background: none;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            padding: 0.25rem;
            display: flex;
            align-items: center;
            transition: var(--transition-fast);
            font-size: 1.125rem;
        }

            .clear-search:hover {
                color: var(--primary-green);
            }

        /* ========== Category Tabs ========== */
        .category-tabs {
            background: var(--neutral-light);
            border-bottom: 1px solid var(--neutral-light);
            padding: 0 1rem;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: thin;
            scrollbar-color: var(--accent-mustard) transparent;
        }

            .category-tabs::-webkit-scrollbar {
                height: 4px;
            }

            .category-tabs::-webkit-scrollbar-thumb {
                background: var(--accent-mustard);
                border-radius: 4px;
            }

        .tabs-container {
            display: flex;
            gap: 0.75rem;
            padding: 1rem 0;
            min-width: max-content;
        }

        .tab-button {
            padding: 0.75rem 1.5rem;
            background: var(--neutral-white);
            border: 2px solid transparent;
            border-radius: 50px;
            font-size: 0.9375rem;
            font-weight: 500;
            color: var(--text-secondary);
            cursor: pointer;
            transition: var(--transition);
            white-space: nowrap;
            display: flex;
            align-items: center;
            gap: 0.625rem;
        }

        .tab-icon {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            overflow: hidden;
            flex-shrink: 0;
            background: var(--neutral-light);
        }

            .tab-icon img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .tab-button:hover {
            background: var(--primary-green);
            color: var(--neutral-white);
            border-color: var(--primary-green);
            transform: translateY(-2px);
            box-shadow: var(--shadow-subtle);
        }

        .tab-button.active {
            background: var(--accent-mustard);
            color: var(--neutral-white);
            border-color: var(--accent-mustard);
        }

        /* ========== Menu Board ========== */
        .menu-board {
            padding: 2.5rem 2rem;
            max-width: 1000px;
            margin: 0 auto;
        }

        /* ========== Menu Category ========== */
        .menu-category {
            margin-bottom: 3rem;
        }

        .category-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            cursor: pointer;
            user-select: none;
            padding: 1rem;
            border-radius: 16px;
            transition: var(--transition-fast);
            background: var(--neutral-cream);
        }

            .category-header:hover {
                background: var(--neutral-light);
            }

        .category-title-wrapper {
            flex: 1;
        }

        .category-name {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .category-image {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            overflow: hidden;
            flex-shrink: 0;
            background: var(--neutral-white);
            box-shadow: var(--shadow-subtle);
        }

            .category-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .category-text-content {
            flex: 1;
        }

        .category-text {
            font-family: 'Montserrat'; /* ✅ MONTSERRAT */
            font-size: 2rem;
            font-weight: 600;
            color: var(--primary-green);
            margin-bottom: 0.25rem;
            letter-spacing: 0.5px;
        }

        .category-subtitle {
            font-size: 0.9375rem;
            color: var(--text-muted);
            font-weight: 300;
            margin-top: 0.25rem;
        }

        .category-toggle {
            width: 40px;
            height: 40px;
            background: var(--neutral-white);
            border: 2px solid var(--neutral-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            color: var(--text-secondary);
            font-size: 1.125rem;
            flex-shrink: 0;
        }

            .category-toggle:hover {
                background: var(--accent-mustard);
                border-color: var(--accent-mustard);
                color: var(--neutral-white);
            }

            .category-toggle i {
                transition: transform 0.3s ease;
            }

        .menu-category.collapsed .category-toggle i {
            transform: rotate(-90deg);
        }

        .menu-category.collapsed .category-header {
            background: var(--neutral-light);
            margin-bottom: 0.5rem;
        }

        /* ========== Menu Items ========== */
        .menu-items {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            overflow: hidden;
            max-height: 5000px;
            opacity: 1;
            transition: max-height 0.4s ease, opacity 0.3s ease;
        }

        .menu-category.collapsed .menu-items {
            max-height: 0;
            opacity: 0;
            gap: 0;
        }

        /* ========== Menu Entry ========== */
        .menu-entry {
            background: var(--neutral-white);
            border: 1px solid var(--neutral-light);
            border-radius: 16px;
            padding: 1.25rem;
            transition: var(--transition);
            cursor: pointer;
            width: 100%;
            position: relative;
            overflow: hidden;
        }

            .menu-entry::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 4px;
                background: transparent;
                transition: var(--transition);
            }

            .menu-entry:hover::before {
                background: var(--accent-mustard);
            }

            .menu-entry:hover {
                box-shadow: var(--shadow-medium);
                transform: translateY(-2px);
                border-color: var(--accent-mustard-light);
            }

        .entry-content {
            display: flex;
            align-items: center;
            gap: 1.25rem;
            width: 100%;
